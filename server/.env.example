# Gmail SMTP Configuration (Recommended - Works for ALL emails!)
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASS=your_gmail_app_password_here
USE_GMAIL_SMTP=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=5
